# Server Configuration
PORT=8080
NODE_ENV=production

# OpenAI Configuration (REQUIRED)
# ⚠️ CRITICAL: This key is used directly by the relay server for all connections
# Keep this secure and never commit to version control!
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_API_URL=wss://api.openai.com/v1/realtime
OPENAI_REALTIME_MODEL=gpt-realtime-mini-2025-10-06

# Connection Limits
MAX_CONNECTIONS=100

# Timeouts (in milliseconds)
HEARTBEAT_INTERVAL=30000
INACTIVITY_TIMEOUT=300000

# CORS Configuration
# ⚠️ SECURITY: Configure specific origins in production!
# Comma-separated list of allowed origins, or use * for all
ALLOWED_ORIGINS=*

# Debug Mode
DEBUG=false

