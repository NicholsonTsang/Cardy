# ==============================================
# Cardy CMS Environment Variables
# Copy this file to .env and fill in your actual values
# ==============================================

# ==============================================
# CORE SUPABASE CONFIGURATION (REQUIRED)
# ==============================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_USER_FILES_BUCKET=userfiles

# ==============================================
# PAYMENT INTEGRATION (REQUIRED)
# ==============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# ==============================================
# OPENAI INTEGRATION (CONFIGURED IN SUPABASE SECRETS)
# ==============================================
# Note: OPENAI_API_KEY should be set in Supabase Edge Function secrets,
# not in this .env file for security reasons

# ==============================================
# APPLICATION URLS (REQUIRED FOR PRODUCTION)
# ==============================================
VITE_APP_BASE_URL=https://app.cardy.com
VITE_DEMO_BASE_URL=https://cardy.demo
VITE_SAMPLE_QR_URL=https://cardy.example.com/demo/ancient-artifacts

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
# Price per card in cents (200 = $2.00 USD)
VITE_CARD_PRICE_CENTS=200
VITE_DEFAULT_CURRENCY=USD

# ==============================================
# CONTACT INFORMATION
# ==============================================
VITE_CONTACT_WHATSAPP_URL=https://wa.me/852xxxxxx
VITE_CONTACT_PHONE=+852 xxxxxx
VITE_CONTACT_EMAIL=support@cardy.com

# ==============================================
# DEFAULT IMAGES (PRODUCTION ASSETS)
# ==============================================
VITE_DEFAULT_CARD_IMAGE_URL=https://images.unsplash.com/photo-1564399580075-5dfe19c205f3?w=400&h=600&fit=crop&crop=center
VITE_HERO_IMAGE_URL=https://images.unsplash.com/photo-1564399580075-5dfe19c205f3?w=400&h=600&fit=crop&crop=center
VITE_FEATURE_IMAGE_1_URL=https://images.unsplash.com/photo-1564399580075-5dfe19c205f3?w=400&h=300&fit=crop
VITE_FEATURE_IMAGE_2_URL=https://images.unsplash.com/photo-1539650116574-75c0c6d73c6e?w=400&h=300&fit=crop
VITE_FEATURE_IMAGE_3_URL=https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=400&h=300&fit=crop
VITE_FEATURE_IMAGE_4_URL=https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=400&h=300&fit=crop
VITE_FEATURE_IMAGE_5_URL=https://images.unsplash.com/photo-1596444080749-6ac1ba12a236?w=400&h=300&fit=crop
