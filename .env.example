# Content Pagination & Lazy Loading Configuration
# Number of content items to load per page (default: 20)
VITE_CONTENT_PAGE_SIZE=20
# Number of characters to show in content preview (default: 200)
VITE_CONTENT_PREVIEW_LENGTH=200
# Use pagination for cards with more than this many items (default: 50)
VITE_LARGE_CARD_THRESHOLD=50
# Distance from bottom (in pixels) to trigger infinite scroll (default: 200)
VITE_INFINITE_SCROLL_THRESHOLD=200
