VITE_REALTIME_VAD_PREFIX_PADDING=300       # Audio captured before speech detected in ms (default: 300)
VITE_REALTIME_VAD_SILENCE_DURATION=800     # Silence duration before ending turn in ms (default: 800, was: 500)

