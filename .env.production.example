VITE_DEMO_BASE_URL=https://demo.cardy.com
VITE_SAMPLE_QR_URL=https://demo.cardy.com/ancient-artifacts

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
VITE_CARD_PRICE_CENTS=200
VITE_DEFAULT_CURRENCY=USD

